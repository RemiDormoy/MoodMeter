<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Je me connecte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:fontFamily="casual" android:textSize="24sp"
            android:textStyle="bold" android:textAllCaps="true"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp" android:hint="Lache ton blaze"
            android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" app:layout_constraintStart_toEndOf="@+id/card1"
            app:layout_constraintHorizontal_bias="0.5">

        <FrameLayout
                android:id="@+id/profileContainerView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieProfileView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_fileName="animations/dino_dance.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>

            <FrameLayout
                    android:id="@+id/alphaView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0"
                    android:visibility="gone"
                    tools:alpha="0.5">


            </FrameLayout>

            <ImageView
                    android:id="@+id/checkView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:alpha="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp"
            />

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card2">

        <FrameLayout
                android:id="@+id/profileContainerView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieProfileView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_fileName="animations/funky_chicken.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>

            <FrameLayout
                    android:id="@+id/alphaView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0"
                    android:visibility="gone"
                    tools:alpha="0.5">


            </FrameLayout>

            <ImageView
                    android:id="@+id/checkView1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp"
            />

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card3"
            app:layout_constraintHorizontal_bias="0.5">

        <FrameLayout
                android:id="@+id/profileContainerView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieProfileView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_fileName="animations/techno_penguin.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>

            <FrameLayout
                    android:id="@+id/alphaView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:alpha="0.5">


            </FrameLayout>

            <ImageView
                    android:id="@+id/checkView4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:alpha="0"
                    tools:visibility="visible"
                    tools:alpha="0.5"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp"
            />

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/card1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card4">

        <FrameLayout
                android:id="@+id/profileContainerView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieProfileView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_fileName="animations/acrobatics.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"/>

            <FrameLayout
                    android:id="@+id/alphaView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0"
                    android:visibility="gone"
                    tools:alpha="0.5">


            </FrameLayout>

            <ImageView
                    android:id="@+id/checkView3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:alpha="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp"
            />

        </FrameLayout>

    </android.support.v7.widget.CardView>
    <Button
            android:text="Je valide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>